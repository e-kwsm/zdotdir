#compdef clang-format clang-format-9 clang-format-10

_clang-format() {
  _arguments \
    {--dry-run,-n}'[If set, do not actually make the formatting changes]' \
    --dump-config'[Dump configuration options to stdout and exit]' \
    -i'[Inplace edit <file>s, if specified.]' \
    --sort-includes'[If set, overrides the include sorting behavior determined by the SortIncludes style flag]' \
    --output-replacements-xml'[Output replacements as XML.]' \
    --style='[Coding style, currently supports]:style:(LLVM Google Chromium Mozilla WebKit)' \
    --verbose'[If set, shows the list of processed files]' \
    '(- *)'--help'[Display available options]' \
    '(- *)'--help-list'[Display list of available options]' \
    '(- *)'--version'[Display the version of this program]' \
    '*:file:_files -g "*.(cc|cpp|h)"'
}
