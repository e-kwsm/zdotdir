#compdef pygmentize

_pygmentize(){
  _arguments \
    -l'[lexer]:lexer' \
    -S'[style]:style' \
    -f'[formatter]:formatter' \
    -a'[arg]' \
    -O'[options]' \
    '(- *)'-L'[lists lexers, formatters, styles or filters]:which:(lexers formatters filters styles)' \
    '(- *)'-N'[guess and print out a lexer name based solely on the given filename]:file:_files -g "*"' \
    '(- *)'-h'[print help]' \
    '(- *)'-V'[prints the package version]' \
    '*:files:_files -g "*"'
}
